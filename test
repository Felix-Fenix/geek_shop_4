server {
    server_name test-nginx.vpnforall.su;

    location = /favicon.ico { access_log off; log_not_found off; }

    location /static/ {
        root /home/fenix/geek_shop_4;
    }

    location /media/ {
        root /home/fenix/geek_shop_4;
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:/home/fenix/geek_shop_4/geekshop.sock;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/test-nginx.vpnforall.su/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/test-nginx.vpnforall.su/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = test-nginx.vpnforall.su) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name test-nginx.vpnforall.su;
    return 404; # managed by Certbot


}
